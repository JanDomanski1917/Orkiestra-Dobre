<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/alfa_slab_one"

        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="Orkiestra Dęta GŁOWNO"
        android:textAlignment="center"
        android:textColor="#2923a9"
        android:textSize="20sp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_wyloguj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#FEFFF7"
            android:textSize="20sp"
            android:background="@drawable/buttonshape_a"
            android:text="Wyloguj"/>

        <Button
            android:id="@+id/bt_spotkania"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#FEFFF7"
            android:textSize="20sp"
            android:background="@drawable/buttonshape_a"
            android:text="Spotkania"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_kaledarz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#FEFFF7"
            android:textSize="20sp"
            android:background="@drawable/buttonshape_a"
            android:text="Kalendarz"/>

        <Button
            android:id="@+id/bt_czonkowie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="#FEFFF7"
            android:textSize="20sp"
            android:background="@drawable/buttonshape_a"
            android:text="Członkowie"/>
    </LinearLayout>
</RelativeLayout>



